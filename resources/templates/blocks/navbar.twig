<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="/">{{ cfg.project_title }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar_main"
            aria-controls="navbar_main" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar_main">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item {% if ROUTE=='index' %}active{% endif %}">
                <a class="nav-link" href="/">{{ lang.nav_index_title }}
                    <span class="sr-only">{{ lang.nav_index_title }}</span>
                </a>
            </li>

            <li class="nav-item {% if ROUTE=='about' %}active{% endif %}">
                <a class="nav-link" href="/about">{{ lang.nav_about }}</a>
            </li>
        </ul>

        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="dropdown_language_select" data-toggle="dropdown"
                   aria-expanded="false"><i class="fa fa-flag"></i> {{ current_lang }}</a>
                <div class="dropdown-menu" aria-labelledby="dropdown_language_select">
                    <h6 class="dropdown-header">{{ lang.available_langs }}:</h6>
                    {% for lng in langs %}
                        <a class="dropdown-item" href="?lang={{ lng }}">{{ lng }}</a>
                    {% endfor %}
                </div>
            </li>

            {% if is_auth %}
                <li class="nav-item {% if ROUTE=='profile' %}active{% endif %}">
                    <a class="nav-link" href="/profile"><i class="fa fa-user"></i> {{ lang.nav_profile }}</a>
                </li>
                <li class="nav-item {% if ROUTE=='logout' %}active{% endif %}">
                    <a class="nav-link" href="/logout"><i class="fa fa-sign-out"></i> {{ lang.nav_logout }}</a>
                </li>
            {% else %}
                <li class="nav-item {% if ROUTE=='signin' %}active{% endif %}">
                    <a class="nav-link" href="/signin"><i class="fa fa-sign-in"></i> {{ lang.nav_signin }}</a>
                </li>
                <li class="nav-item {% if ROUTE=='signup' %}active{% endif %}">
                    <a class="nav-link" href="/signup"><i class="fa fa-user-plus"></i> {{ lang.nav_signup }}</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>